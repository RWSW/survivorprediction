<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="7dp"
    android:weightSum="1"
    tools:context="com.bluesages.gobbler.activity.GroupSummaryActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/statusTitle"
            android:id="@+id/statusTitle"
            android:layout_gravity="center_vertical" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.08" />

        <Spinner
            android:layout_width="108dp"
            android:layout_height="41dp"
            android:id="@+id/statusSpinner"
            android:spinnerMode="dropdown"
            android:layout_gravity="center_vertical"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:gravity="center|center_vertical|center_horizontal" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Data"
        android:onClick="getData"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_gravity="center"
        android:gravity="center_horizontal|end"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.97">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Group"
                android:id="@+id/contactsTitle"
                android:layout_gravity="center_vertical"
                android:textSize="16dp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contactProgressBar"
                android:layout_gravity="center_vertical"
                android:indeterminate="true" />
        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelRefresh"
            android:onClick="onCancelButtonClick"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_list"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />


</LinearLayout>